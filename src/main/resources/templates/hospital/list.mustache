{{>layouts/header}}
<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#hospitals}}
        <tr>
            <th scope="row">{{id}}</th>
            <td><a href="/hospitals/{{id}}">{{hospitalName}}</a></td>
            <td>{{roadNameAddress}}</td>
        </tr>
    {{/hospitals}}
    </tbody>
</table>
<ul class="pagination justify-content-center">
    {{#hospitalName}}<!--hospitalName 있을 때-->
        <li class="page-item"><a class="page-link" href="?page={{previous}}&hospitalName={{hospitalName}}">Previous</a></li>
        <li class="page-item"><a class="page-link" href="?page={{next}}&hospitalName={{hospitalName}}">Next</a></li>
    {{/hospitalName}}
    {{^hospitalName}}<!--hospitalName 없을 때-->
    {{#keyword}}<!--keyword가 있을 때-->
        <li class="page-item"><a class="page-link" href="?page={{previous}}&keyword={{keyword}}">Previous</a></li>
        <li class="page-item"><a class="page-link" href="?page={{next}}&keyword={{keyword}}">Next</a></li>
    {{/keyword}}
