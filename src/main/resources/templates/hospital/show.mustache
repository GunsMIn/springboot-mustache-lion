{{>layouts/header}}
<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">병원 이름</th>
        <th scope="col">병원 위치</th>
        <th scope="col">병실 수</th>
        <th scope="col">병원 유형</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <th scope="row">{{hospital.id}}</th>
        <td>{{hospital.hospitalName}}</td>
        <td>{{hospital.roadNameAddress}}</td>
        <td>{{hospital.patientRoomCount}}</td>
        <td>{{hospital.businessTypeName}}</td>
    </tr>
    </tbody>
</table>
<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">리뷰 제목</th>
        <th scope="col">리뷰 내용</th>
        <th scope="col">작성자</th>
    </tr>
    </thead>
    <tbody>
    {{#reviews}}
        <tr>
            <td>{{title}}</td>
            <td>{{content}}</td>
            <td>{{userName}}</td>
        </tr>
    {{/reviews}}
    </tbody>
</table>
<a class="btn btn-primary" href="/articles/{{id}}/edit">Modify</a>
<a class="btn btn-danger" href="/articles/{{id}}/delete">Delete</a>
{{>layouts/footer}}